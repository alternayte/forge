package views

import (
	"fmt"
	"{{.ProjectModule}}/gen/models"
)

// {{.Resource.Name}}Detail renders a read-only detail view of a {{.Resource.Name}}.
templ {{.Resource.Name}}Detail({{lower .Resource.Name}} *models.{{.Resource.Name}}) {
	<div class="max-w-2xl mx-auto">
		<div class="bg-white shadow rounded-lg p-6">
			<h2 class="text-xl font-semibold text-gray-900 mb-6">{{.Resource.Name}} Details</h2>
			<dl class="divide-y divide-gray-200">
{{- range .Resource.Fields}}
				<div class="py-3 flex gap-4">
					<dt class="text-sm font-medium text-gray-500 w-1/3">{{.Name}}</dt>
					<dd class="text-sm text-gray-900 w-2/3">{ fmt.Sprint({{lower $.Resource.Name}}.{{.Name}}) }</dd>
				</div>
{{- end}}
			</dl>
			<div class="mt-6 flex gap-4">
				<a
					href={ templ.SafeURL(fmt.Sprintf("/{{kebab (plural .Resource.Name)}}/%s/edit", fmt.Sprint({{lower .Resource.Name}}.ID))) }
					class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 text-sm"
				>Edit</a>
				<a
					href="/{{kebab (plural .Resource.Name)}}"
					class="bg-gray-100 text-gray-700 px-4 py-2 rounded hover:bg-gray-200 text-sm"
				>Back to list</a>
			</div>
		</div>
	</div>
}
